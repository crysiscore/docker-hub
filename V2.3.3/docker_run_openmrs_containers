#####################P Passos de configuracao  #######################################
# Step 1 
docker exec -it altomae bash

# Step 2

# UTF-8 locales
apt-get update
apt-get install -y locales
dpkg-reconfigure locales


# Step 3
pico ~/.bashrc
# copiar para o fim  do ficheiro a seguinte linha
export LC_ALL="en_US.UTF-8"

# Step 4 no terminal 
source  ~/.bashrc


# Step 5 no terminal 
# copiar o ficherio openmrs-runtime.properties   para a pasta  /var/lib/tomcat8/bin  e mudar o nome   nome_nova_instancia para o corresponder o nome da us
# modificar os parametros de conexao da BD instancia docker na porta 3306

mv openmrs-runtime.properties  altomae-runtime.properties


# Step 5 no terminal 
# mudar o nome   nome_nova_instancia para o corresponder o nome da us

pico altomae-runtime.properties  
cd webapps/
cp openmrs.war  altomae.war
rm -rf openmrs*

# esperar alguns seg para o tomcat fazer o deploy do  nome_nova_instancia.war

pico altomae/WEB-INF/web.xml

# copiar este texto para linha abaixo do bloco <param-name>log4jRefreshInterval</param-name>
 # mudar o nome   nome_nova_instancia para o corresponder o nome da us
<context-param>

                  <param-name>webAppRootKey</param-name>
                  <param-value>altomae</param-value>
</context-param>

# save ctrl+o
# Step 6 no terminal 
exit

# Step 7 no host para o container
docker restart altomae


# Step 8 no host actualizar o servidor proxy para rotear requests que vem com o nome da nome_nova_instancia para o docker correspondente ( o que acabamos de criar)

sudo pico /etc/nginx/conf.d/default.conf #  adicionar um bloco location para a US


# Step 9 no host para o container
# carregar o proxy
 sudo nginx -s reload

docker start dhis  mysql_backup_server  mysql_replica_for_openmrs