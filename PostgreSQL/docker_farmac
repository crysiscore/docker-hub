docker run -d \
    --name postgres_farmac_piloto \
    -p 5436:5432   \
    -e POSTGRES_USERNAME=pgadmin \
    -e POSTGRES_PASSWORD=iD@rt2020 \
    -v ~/farmac/:/data \
    crysiscore/debian-postgres:9.6



docker exec -it postgres_farmac_piloto bash
su - postgres
    create database central ;
CREATE USER piloto WITH PASSWORD 'iD@rt2020' ;
GRANT USAGE ON SCHEMA public  TO piloto ;
GRANT ALL PRIVILEGES ON DATABASE central TO piloto;
alter user postgres with password 'iD@rt2020';



